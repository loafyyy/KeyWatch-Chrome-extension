{
  "manifest_version": 2,

  "name": "clicky",
  "description": "track keyboard clicks",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click to see popup"
  },

  "permissions": [
    "*://*.jsonplaceholder.typicode.com/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
   {
     "matches": ["<all_urls>"],
     "js": ["contentScript.js"]
   }
 ]
}